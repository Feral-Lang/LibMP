let builder = import('pkg/builder');

let project = builder.get();

let libGmp = project.addSystemLibrary('GMP');
libGmp.makeRequired();
let libMpfr = project.addSystemLibrary('MPFR');
libMpfr.makeRequired();
let libMpc = project.addSystemLibrary('MPC');
libMpc.makeRequired();

let feralMP = project.addLibrary('MP', 'MP.cpp'); # `src/` is not needed here
feralMP.dependsOn(libGmp, libMpfr, libMpc);
